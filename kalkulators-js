<body><center>


<h1> KALKULATOR Z PANEM MOLCZYKIEM </h1>
<input type="number" id="liczba1"/>
<input type="number" id="liczba2"/>

 <button onclick="dodaj()">DODAJ</button> 
  <button onclick="odejmij()">ODEJMIJ</button> 
   <button onclick="pomnoz()">POMNÓŻ</button>
 <button onclick="podziel()">PODZIEL</button>    
 <h1 id="wynik"></h1>

</center>

<script>



function dodaj(){
var liczba1 = parseInt(document.getElementById("liczba1").value);
var liczba2 = parseInt(document.getElementById("liczba2").value);
var wynik = liczba1 + liczba2;
document.getElementById("wynik").innerHTML =  wynik ;
}

function odejmij(){
var liczba1 = parseInt(document.getElementById("liczba1").value);
var liczba2 = parseInt(document.getElementById("liczba2").value);
var wynik = liczba1 - liczba2;
document.getElementById("wynik").innerHTML =  wynik ;
}


function pomnoz(){
var liczba1 = parseInt(document.getElementById("liczba1").value);
var liczba2 = parseInt(document.getElementById("liczba2").value);
var wynik = liczba1 * liczba2;
document.getElementById("wynik").innerHTML =  wynik ;
}


function podziel(){
var liczba1 = parseInt(document.getElementById("liczba1").value);
var liczba2 = parseInt(document.getElementById("liczba2").value);
var wynik = liczba1 / liczba2;
document.getElementById("wynik").innerHTML =  wynik ;
}
</script>
